{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "wordpress"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
        "camelcase": [
            "off"
        ],
        "comma-dangle": [
            "off"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-undef": [
            "off"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "react/prop-types": [
            "off"
        ],
        "react/display-name": [
            "off"
        ],
        "react/no-unescaped-entities": [
            "off"
        ],
        "semi": [
            "error",
            "never"
        ],
        "space-in-parens" : [
          "error",
          "always"
        ]
    }
}
