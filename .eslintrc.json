{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "wordpress"
    ],
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "globals": {
      "describe": "readable",
      "expect": "readable",
      "it": "readable",
      "FL_ASSISTANT_INITIAL_STATE": "readable",
      "FL_ASSISTANT_CONFIG": "readable",
      "FL": "readable",
      "FLBuilder": "readable",
      "__PRODUCTION__": "readable",
      "__webpack_public_path__": "writable"
    },
    "rules": {
        "camelcase": [
            "off"
        ],
        "comma-dangle": [
            "off"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "space-in-parens" : [
          "error",
          "always"
        ],
        "object-curly-spacing" : [
          "error",
          "always"
        ],
        "array-bracket-spacing" : [
          "error",
          "always"
        ],
        "no-case-declarations": [
            "off"
        ],
        "react/prop-types": [
            "off"
        ],
        "react/display-name": [
            "off"
        ],
        "react/no-unescaped-entities": [
            "off"
        ],
        "react/jsx-curly-spacing" : [
          "error",
          "always"
        ]
    }
}
